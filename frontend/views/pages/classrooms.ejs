<html>
    <head>
        <%- include('../partials/head'); %>
        <%- include('../partials/navbar'); %>
    </head>
    <body class="container">
        <h1>
            Classrooms
        </h1>
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Capacity</th>
                        <th scope="col">Name</th>
                        <th scope="col">Facility</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                <% classrooms.forEach(function(classroom) { %>
                    <tr>
                        <td> <%= classroom[0] %></td>
                        <td> <%= classroom[1] %></td>
                        <td> <%= classroom[2] %></td>
                        <td> <%= classroom[3] %></td>
                        <td>
                            <form action="<%= '/classrooms/delete/'+ classroom[0] %>" method="post" >
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>

            <h1>
                Create Classroom
            </h1>
            <form action="/classrooms/add" method="post">
                <div class="form-group">
                    <label class="form-label">Name</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="Classroom Name" required
                    autofocus>
                </div>
                <div class="form-group">
                    <label class="form-label">Capacity</label>
                    <input type="text" id="capacity" name="capacity" class="form-control" placeholder="Capacity" required
                    autofocus>
                </div>
                <div class="form-group">
                    <label class="form-label">Facility</label>
                    <input type="text" id="facility" name="facility" class="form-control" placeholder="Facility" required
                    autofocus>
                </div>
                <input class="btn btn-lg btn-primary btn-block" type="submit">
            </form>
        </div>
    </body>
</html>